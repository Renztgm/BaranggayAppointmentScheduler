@page
@model BaranggayAppointmentScheduler.Pages.Admin.AdminDashboardModel
@{
    Layout = "_Layout";
}

<head>
    <title>Admin Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f8f8;
        }

        .container {
            max-width: 100%;
            padding: 20px;
        }

        h2 {
            color: #007bff;
        }

        .dashboard {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .card-container {
            display: flex;
            justify-content: space-between;
            gap: 15px;
        }

        .card {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            flex: 1;
            border: none;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
            }

        .title {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        .number {
            font-size: 24px;
            font-weight: bold;
            color: #333;
        }

        .stats-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: 20px;
            margin-top: 20px;
        }

        .chart-box {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            flex: 1;
            min-width: 300px;
            text-align: center;
        }

            .chart-box h3 {
                margin-bottom: 10px;
            }

    </style>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>

    <div class="container">
        <h2>Admin Dashboard</h2>

        <div class="dashboard">
            <div class="card-container">
                <button class="card" onclick="alert('General Button Clicked!')">
                    <span class="title">General</span>
                    <span class="number">5</span>
                    <p>Need Barangay ID?</p>
                </button>

                <button class="card" onclick="alert('Health Button Clicked!')">
                    <span class="title">Health</span>
                    <span class="number">13</span>
                    <p>Check Up?</p>
                </button>

                <button class="card" onclick="alert('Report Button Clicked!')">
                    <span class="title">Report</span>
                    <span class="number">10</span>
                    <p>Complaint?</p>
                </button>

                <button class="card" onclick="alert('Business Button Clicked!')">
                    <span class="title">Business</span>
                    <span class="number">20</span>
                    <p>Business Permit?</p>
                </button>
            </div>

            <div class="stats-container">
                <div class="chart-box">
                    <h3>Daily <span class="visitors-count">48 Visitors</span></h3>
                    <canvas id="dailyChart"></canvas>
                </div>
                <div class="chart-box">
                    <h3>Weekly</h3>
                    <canvas id="weeklyChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const dailyCtx = document.getElementById('dailyChart').getContext('2d');
            new Chart(dailyCtx, {
                type: 'bar',
                data: {
                    labels: ['General', 'Health', 'Report', 'Business'],
                    datasets: [{
                        label: 'Visitors',
                        data: [5, 13, 10, 20],
                        backgroundColor: ['#4c84ff', '#6a70fc', '#9779fb', '#c47aff']
                    }]
                },
                options: { responsive: true }
            });

            const weeklyCtx = document.getElementById('weeklyChart').getContext('2d');
            new Chart(weeklyCtx, {
                type: 'bar',
                data: {
                    labels: ['17', '18', '19', '20', '21', '22', '23', '24', '25'],
                    datasets: [{
                        label: 'Visitors',
                        data: [12, 15, 20, 18, 22, 25, 30, 27, 33],
                        backgroundColor: '#6a70fc'
                    }]
                },
                options: { responsive: true }
            });
        });

    </script>

</body>
