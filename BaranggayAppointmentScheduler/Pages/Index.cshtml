@page
@model IndexModel
@{
    ViewData["Title"] = "Landing Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Barangay Appointment System</title>
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <script>
        function bookAppointment() {
            alert("Redirecting to the appointment booking page...");
        }

        function checkStatus() {
            alert("Checking appointment status...");
        }
    </script>
</head>
<body>
    <header>
        <div class="logo">LB</div>
        <button class="login-btn" onclick="window.location.href='/User/UserLogin'">LOGIN</button>
        <button class="login-btn" onclick="window.location.href='/admin/AdminLogin'">ADMIN</button>
    </header>

    <section class="hero">
        <div class="hero-content">
            <div class="hero-text">
                <p>Easily book and manage your barangay appointments without the hassle of long lines. Fast, convenient, and accessible for everyone. Get started today!</p>
                <h1>Scheduling convenience for <span class="highlight">everyone.</span></h1>
                <div class="buttons">
                    <button class="primary-btn" onclick="window.location.href='/User/UserLogin'">BOOK APPOINTMENT NOW</button>
                    <button class="secondary-btn" onclick="window.location.href='#'">CHECK APPOINTMENT STATUS</button>
                </div>
            </div>
            <img src="~/css/img/logoln.svg" alt="Barangay Lower Bicutan Logo" class="barangay-logo">
        </div>
    </section>

    <section class="info">
        <p>Schedule barangay appointments without the back-and-forth hassle.</p>
    </section>

    <section class="footer">
        <p>Everything you need for scheduling</p>
        <div class="contact">Contact us: 09xx-xxxxxxx</div>
    </section>
</body>
</html>
