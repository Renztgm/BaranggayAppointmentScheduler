@{
    // Ensure correct layout usage
    var path = Context.Request.Path.Value.ToLower();
    if (User.Identity.IsAuthenticated && path != "/index")
    {
        Layout = "/Pages/Shared/_Layout.cshtml"; // ✅ Corrected path
    }
    else
    {
        Layout = null; // No layout for unauthenticated users or landing page
    }
}
